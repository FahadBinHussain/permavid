{
  "name": "permavid",
  "version": "0.1.0",
  "private": true,
  "main": "electron/dist/main.js",
  "homepage": ".",
  "scripts": {
    "dev:next": "next dev --turbopack --port 3000",
    "dev": "concurrently \"pnpm dev:next\" \"pnpm dev:electron\"",
    "dev:electron": "wait-on http://localhost:3000 && tsc electron/main.ts electron/preload.ts --outDir electron/dist --module commonjs --target es2018 --esModuleInterop && electron .",
    "dev:tauri": "tauri dev",
    "build:next": "set ESLINT_SKIP_DEV_OVERLAY=true && next build --no-lint",
    "build:electron": "tsc electron/main.ts electron/preload.ts --outDir electron/dist --module commonjs --target es2018 --esModuleInterop",
    "build": "pnpm build:next && pnpm build:electron",
    "build:tauri": "tauri build",
    "build:prod": "pnpm build:next && pnpm build:tauri",
    "release": "tauri build --config tauri.release.conf.json",
    "start": "next start",
    "lint": "next lint",
    "dist": "pnpm build && electron-builder",
    "dist:tauri": "pnpm build:next && pnpm build:tauri",
    "prebuild": "echo 'Building PermaVid for production...' && pnpm install",
    "postbuild": "echo 'Build complete! Check tauri/target/release/bundle/ for installers'",
    "clean": "powershell -ExecutionPolicy Bypass -File ./cleanup.ps1",
    "db:init": "node scripts/db-init.js",
    "db:init:neon": "node scripts/neon-db-init.js",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@auth/core": "^0.40.0",
    "@auth/nextjs": "0.0.0-380f8d56",
    "@heroicons/react": "^2.2.0",
    "@neondatabase/serverless": "^1.0.1",
    "@next/font": "^14.2.5",
    "@prisma/client": "^6.10.1",
    "@react-oauth/google": "^0.12.2",
    "@tauri-apps/api": "^1.5.3",
    "@types/uuid": "^10.0.0",
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "form-data": "^4.0.2",
    "next": "15.3.1",
    "pg": "^8.16.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@tauri-apps/cli": "^1.5.11",
    "@types/node": "^20",
    "@types/pg": "^8.15.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "postcss": "^8.4.39",
    "prisma": "^6.10.1",
    "tailwindcss": "^4.0.4",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "description": "PermaVid: Local Video Archiving Tool",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FahadBinHussain/PermaVid.git"
  },
  "keywords": [
    "archive",
    "video",
    "download",
    "electron",
    "nextjs",
    "tauri"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FahadBinHussain/PermaVid/issues"
  }
}
